<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        
        <ImageView
            android:id="@+id/imageSpec"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="15dp"
            android:scaleType="fitCenter"
            tools:srcCompat="@tools:sample/avatars"/>

        <TextView
            android:id="@+id/nameSpec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="09.02.07 «Информационные системы и программирование»"
            android:layout_margin="15dp"
            android:fontFamily="@font/robbold"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Квалификация:"
                android:layout_marginRight="5dp"
                android:textSize="18sp"
                android:gravity="center_vertical|end"
                />

            <TextView
                android:id="@+id/qualSpec"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:gravity="center|left"
                android:text="Программист\n\nАдминистратор баз данных"
                android:fontFamily="@font/robbold"/>


        </LinearLayout>
        
    </LinearLayout>

</androidx.cardview.widget.CardView>